    <script>
        const viewport = document.getElementById('viewport');
        const world = document.getElementById('world');
        const edgesLayer = document.getElementById('edges-layer');
        const nodeMenu = document.getElementById('node-menu');
        const canvasMenu = document.getElementById('canvas-menu');
        const edgeMenu = document.getElementById('edge-menu');
        const textMenu = document.getElementById('text-menu');
        const helpModal = document.getElementById('help-modal');
        
        const widthInput = document.getElementById('width-input');
        const widthSlider = document.getElementById('width-slider');
        const spacingInput = document.getElementById('spacing-input');
        const spacingSlider = document.getElementById('spacing-slider');
        
        // --- State ---
        let view = { x: window.innerWidth / 2, y: window.innerHeight / 2, zoom: 1 };
        let isDraggingCanvas = false;
        let isDraggingNode = false;
        let activeNodeId = null;
        let hoverNodeId = null; 
        let hoverEdgeId = null;
        let activeTextNodeId = null;
        let lastMouse = { x: 0, y: 0 };
        let contextMenuPos = { x: 0, y: 0 }; 
        let nextNodeId = 1;
        let nextEdgeId = 1;

        let connectionMode = { active: false, sourceId: null, tempLine: null };
        let edges = [];
        let forkCount = 2;
        let alertIntervals = {}; // Map nodeId -> intervalId

        // Shape Configurations
        const CONFIG = {
            triangle: { p: [{x:100,y:25}, {x:165,y:137.5}, {x:35,y:137.5}, {x:35,y:137.5}, {x:35,y:137.5}, {x:100,y:25}], stroke: 35 },
            circle: { p: [{x:100,y:100}, {x:100,y:100}, {x:100,y:100}, {x:100,y:100}, {x:100,y:100}, {x:100,y:100}], stroke: 170 },
            rectangle: { p: [{x:20,y:55}, {x:180,y:55}, {x:180,y:145}, {x:20,y:145}, {x:20,y:145}, {x:20,y:55}], stroke: 35 },
            pill: { p: [{x:50,y:100}, {x:150,y:100}, {x:150,y:100}, {x:150,y:100}, {x:50,y:100}, {x:50,y:100}], stroke: 80 },
            pentagon: { p: [{x:100,y:20}, {x:180,y:80}, {x:150,y:170}, {x:50,y:170}, {x:20,y:80}, {x:100,y:20}], stroke: 25 },
            hexagon: { p: [{x:100,y:20}, {x:170,y:60}, {x:170,y:140}, {x:100,y:180}, {x:30,y:140}, {x:30,y:60}], stroke: 25 }
        };

        function init() {
            // Try load
            if(!loadState()) {
                createNode(0, 0, 'triangle');
            }
            updateWorldTransform();
        }

        // --- Persistence ---

        function saveState() {
            const nodesData = [];
            document.querySelectorAll('.node-wrapper').forEach(n => {
                let color = null;
                const path = n.querySelector('path');
                if (path) color = path.style.fill;

                // Special handling for lists content
                let customContent = null;
                const listEl = n.querySelector('.post-call-list');
                if (listEl) customContent = listEl.innerHTML;

                // Check for renamed titles in special nodes
                let title = null;
                if (n.dataset.type === 'post-call' || n.dataset.type === 'complaint-board') {
                    const header = n.querySelector('.post-call-header span:first-child');
                    if (header) title = header.innerText;
                }
                
                // Check alert active state
                let isAlertActive = false;
                if (n.dataset.type === 'alert-button') {
                    const btn = n.querySelector('.neumorphic-toggle-btn');
                    if(btn && btn.classList.contains('active')) isAlertActive = true;
                }

                nodesData.push({
                    id: n.id,
                    left: n.style.left,
                    top: n.style.top,
                    width: n.style.width,
                    height: n.style.height,
                    type: n.dataset.type,
                    rotation: n.dataset.rotation,
                    scale: n.dataset.scale,
                    text: n.querySelector('.node-text') ? n.querySelector('.node-text').innerHTML : "",
                    completed: n.classList.contains('completed'),
                    color: color,
                    customContent: customContent, // Save list content
                    title: title, // Save custom title
                    isAlertActive: isAlertActive // Save Alert State
                });
            });

            const state = {
                nodes: nodesData,
                edges: edges,
                nextNodeId: nextNodeId,
                nextEdgeId: nextEdgeId,
                view: view
            };
            
            localStorage.setItem('neumorphic_canvas_state', JSON.stringify(state));
            
            // Visual feedback
            const btn = document.querySelector('button[title="Save"]');
            const originalHtml = btn.innerHTML;
            btn.innerHTML = `<span style="color:var(--success-color)">âœ“</span>`;
            setTimeout(() => btn.innerHTML = originalHtml, 1000);
        }

        function loadState() {
            const data = localStorage.getItem('neumorphic_canvas_state');
            if(!data) return false;
            
            const state = JSON.parse(data);
            
            // Clear current
            clearCanvas(false); 

            // Restore View
            view = state.view || { x: window.innerWidth / 2, y: window.innerHeight / 2, zoom: 1 };
            nextNodeId = state.nextNodeId || 1;
            nextEdgeId = state.nextEdgeId || 1;

            // Restore Nodes
            state.nodes.forEach(n => {
                const wrapper = createNode(parseFloat(n.left), parseFloat(n.top), n.type, n.id);
                wrapper.dataset.rotation = n.rotation;
                wrapper.dataset.scale = n.scale;
                
                if(n.width) { wrapper.style.width = n.width; wrapper.style.height = n.height; }
                if(n.completed) wrapper.classList.add('completed');
                
                const textEl = wrapper.querySelector('.node-text');
                if(textEl) {
                    textEl.innerHTML = n.text;
                    if(n.text.trim() !== '') textEl.classList.add('visible');
                }

                // Restore Color if regular shape node
                if(n.type !== 'text' && n.type !== 'post-call' && n.type !== 'complaint-board' && n.type !== 'alert-button' && n.color) {
                    const path = wrapper.querySelector('path');
                    if(path) { path.style.fill = n.color; path.style.stroke = n.color; }
                }
                
                // Restore Custom List Content
                if (n.customContent && n.type === 'complaint-board') {
                    const listEl = wrapper.querySelector('.post-call-list');
                    if(listEl) listEl.innerHTML = n.customContent;
                }

                // Restore Custom Title
                if (n.title && (n.type === 'post-call' || n.type === 'complaint-board')) {
                    const header = wrapper.querySelector('.post-call-header span:first-child');
                    if (header) header.innerText = n.title;
                }
                
                updateNodeTransform(wrapper);
                
                if(n.type === 'text') fitNodeToText(wrapper);
                
                // Restore Alert State
                if (n.type === 'alert-button' && n.isAlertActive) {
                    toggleAlertNode(n.id); 
                }
            });

            // Restore Edges
            state.edges.forEach(eData => {
                const sourceNode = document.getElementById(eData.source);
                const targetNode = document.getElementById(eData.target);
                if(sourceNode && targetNode) {
                    const line = document.createElementNS("http://www.w3.org/2000/svg", "path");
                    line.classList.add('connection-line');
                    line.id = eData.id;
                    line.setAttribute('d', getEdgePathD(parseFloat(sourceNode.style.left), parseFloat(sourceNode.style.top), parseFloat(targetNode.style.left), parseFloat(targetNode.style.top), eData.type));
                    line.addEventListener('contextmenu', (e) => showEdgeMenu(e, eData.id));
                    line.addEventListener('mouseenter', () => hoverEdgeId = eData.id);
                    line.addEventListener('mouseleave', () => hoverEdgeId = null);
                    
                    edgesLayer.insertBefore(line, edgesLayer.firstChild);
                    
                    eData.element = line;
                    edges.push(eData);
                    updateEdgeAppearance(eData);
                }
            });

            return true;
        }

        function clearCanvas(save=true) {
            // Stop all alerts
            Object.keys(alertIntervals).forEach(key => clearInterval(alertIntervals[key]));
            alertIntervals = {};
            
            const nodes = document.querySelectorAll('.node-wrapper');
            nodes.forEach(n => n.remove());
            
            edges.forEach(e => e.element.remove());
            edges = [];
            
            if(save) {
                nextNodeId = 1;
                nextEdgeId = 1;
                saveState();
            }
        }

        function resetView() {
            view = { x: window.innerWidth / 2, y: window.innerHeight / 2, zoom: 1 };
            updateWorldTransform();
        }

        function toggleHelp() {
            helpModal.classList.toggle('visible');
        }

        // --- Node Logic ---

        function createNode(x, y, type, forceId = null) {
            const id = forceId ? forceId : `node-${nextNodeId++}`;
            const wrapper = document.createElement('div');
            wrapper.className = 'node-wrapper';
            wrapper.id = id;
            wrapper.style.left = `${x}px`;
            wrapper.style.top = `${y}px`;
            wrapper.dataset.type = type;
            wrapper.dataset.rotation = 0;
            wrapper.dataset.scale = 1;
            
            let innerContent = '';
            
            if (type === 'text') {
                innerContent = `<div class="node-text visible" contenteditable="true" spellcheck="false">Type here...</div>`;
            } else if (type === 'post-call') {
                innerContent = `
                    <div class="post-call-wrapper">
                        <div class="post-call-header">
                            <span>Post Call Work</span>
                            <div class="refresh-icon-btn" onclick="collectCompletedWork('${id}')" title="Force Refresh">
                                <svg viewBox="0 0 24 24" width="16" height="16" fill="none" stroke="currentColor" stroke-width="3"><path d="M23 4v6h-6"></path><path d="M1 20v-6h6"></path><path d="M3.51 9a9 9 0 0 1 14.85-3.36L23 10M1 14l4.64 4.36A9 9 0 0 0 20.49 15"></path></svg>
                            </div>
                        </div>
                        <div class="post-call-list" id="list-${id}">
                            <div style="text-align:center; opacity:0.5; padding:20px;">Waiting for data...</div>
                        </div>
                        <button class="post-call-btn copy-btn" id="copy-btn-${id}" onclick="copyPostCallData('${id}')">
                            <svg viewBox="0 0 24 24" width="16" height="16" fill="none" stroke="currentColor" stroke-width="2.5"><rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path></svg>
                            Copy Data
                        </button>
                    </div>
                `;
            } else if (type === 'complaint-board') {
                innerContent = `
                    <div class="post-call-wrapper">
                        <div class="post-call-header" style="color:var(--danger-color)">
                            <span>Complaint Board</span>
                            <span>âš </span>
                        </div>
                        <div class="post-call-list" id="list-${id}"></div>
                        <div class="complaint-input-group">
                            <input type="text" class="complaint-input" placeholder="Type complaint..." id="input-${id}" onkeydown="if(event.key==='Enter') addComplaint('${id}')">
                            <button class="complaint-add-btn" onclick="addComplaint('${id}')">+</button>
                        </div>
                    </div>
                `;
            } else if (type === 'alert-button') {
                // Alert Button Node
                innerContent = `
                    <div class="alert-btn-wrapper">
                        <div class="alert-status-light"></div>
                        <button class="neumorphic-toggle-btn" onclick="toggleAlertNode('${id}')">
                            <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2.5"><path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"></path><path d="M13.73 21a2 2 0 0 1-3.46 0"></path></svg>
                            Enable Alert
                        </button>
                    </div>
                `;
            } else {
                // Shape node
                innerContent = `
                    <svg viewBox="0 0 200 200" preserveAspectRatio="none" width="100%" height="100%" style="overflow:visible"><path d="${getDString(CONFIG[type])}" stroke-width="${CONFIG[type].stroke}" /></svg>
                    <div class="node-text" contenteditable="true" spellcheck="false"></div>
                    <div class="status-badge">
                        <svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>
                    </div>
                `;
            }
            wrapper.innerHTML = innerContent;
            
            wrapper.addEventListener('mousedown', handleNodeMouseDown);
            wrapper.addEventListener('mouseenter', (e) => {
                animateNodeHover(e.currentTarget, true);
                hoverNodeId = id;
            });
            wrapper.addEventListener('mouseleave', (e) => {
                animateNodeHover(e.currentTarget, false);
                hoverNodeId = null;
            });
            wrapper.addEventListener('contextmenu', (e) => showNodeMenu(e, id));
            
            if (type === 'text') {
                wrapper.addEventListener('dblclick', (e) => {
                    e.stopPropagation();
                    enableTextEditing(id);
                });
            }
            
            const textEl = wrapper.querySelector('.node-text');
            if (textEl && type !== 'text') {
                textEl.addEventListener('input', () => {
                    fitNodeToText(wrapper);
                    updateTextMenuPos();
                });
                textEl.addEventListener('focus', (e) => {
                    activeTextNodeId = id;
                    updateTextMenuPos();
                    textMenu.classList.add('visible');
                });
                textEl.addEventListener('blur', () => {
                    textMenu.classList.remove('visible');
                    activeTextNodeId = null;
                    wrapper.classList.remove('editing');
                    saveState(); 
                    triggerAutoUpdate(); 
                });
                textEl.addEventListener('keyup', updateTextMenuPos);
            }
            
            world.appendChild(wrapper);
            if(type === 'text') fitNodeToText(wrapper);
            if(!forceId) saveState(); 
            if(type === 'post-call') setTimeout(() => collectCompletedWork(id), 100);
            return wrapper;
        }

        function addPostCallWorkNodeAtCursor() {
            const wrapper = createNode(contextMenuPos.x, contextMenuPos.y, 'post-call');
            hideMenus();
        }

        function addComplaintBoardNodeAtCursor() {
            const wrapper = createNode(contextMenuPos.x, contextMenuPos.y, 'complaint-board');
            hideMenus();
        }

        function addAlertNodeAtCursor() {
            const wrapper = createNode(contextMenuPos.x, contextMenuPos.y, 'alert-button');
            hideMenus();
        }

        // --- Alert Logic ---
        function toggleAlertNode(id) {
            const node = document.getElementById(id);
            if (!node) return;
            const btn = node.querySelector('.neumorphic-toggle-btn');
            const light = node.querySelector('.alert-status-light');
            
            if (alertIntervals[id]) {
                // Turn OFF
                clearInterval(alertIntervals[id]);
                delete alertIntervals[id];
                btn.classList.remove('active');
                light.classList.remove('on');
                btn.innerHTML = `<svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2.5"><path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"></path><path d="M13.73 21a2 2 0 0 1-3.46 0"></path></svg> Enable Alert`;
            } else {
                // Turn ON
                btn.classList.add('active');
                light.classList.add('on');
                btn.innerText = "Disable Alert";
                
                // Trigger immediately
                triggerRedAlert();
                
                // Set interval (Every 5s)
                alertIntervals[id] = setInterval(() => {
                    triggerRedAlert();
                }, 5000);
            }
            saveState();
        }

        function triggerRedAlert() {
            const box = document.getElementById('global-alert-box');
            box.classList.add('visible');
            
            // Hide after 2.5s (so it pulses 2.5s on, 2.5s off)
            setTimeout(() => {
                box.classList.remove('visible');
            }, 2500); 
        }

        function triggerAutoUpdate() {
            const postCallNodes = document.querySelectorAll('.node-wrapper[data-type="post-call"]');
            postCallNodes.forEach(node => collectCompletedWork(node.id));
        }

        function addComplaint(nodeId) {
            const input = document.getElementById(`input-${nodeId}`);
            const list = document.getElementById(`list-${nodeId}`);
            const text = input.value.trim();
            if(!text) return;

            const item = document.createElement('div');
            item.className = 'post-call-item complaint-source';
            item.innerHTML = `
                <div>${text}</div>
                <div class="item-delete-btn" onclick="deleteComplaintItem(this)">Ã—</div>
            `;
            list.appendChild(item);
            input.value = '';
            list.scrollTop = list.scrollHeight;
            saveState();
            triggerAutoUpdate(); 
        }

        function deleteComplaintItem(btn) {
            btn.parentElement.remove();
            saveState();
            triggerAutoUpdate(); 
        }

        function copyPostCallData(nodeId) {
            const listContainer = document.getElementById(`list-${nodeId}`);
            if (!listContainer) return;

            const items = listContainer.querySelectorAll('.post-call-item');
            if (items.length === 0) return;

            let clipboardText = "POST CALL WORK SUMMARY:\n\n";

            items.forEach(item => {
                const titleEl = item.querySelector('small');
                let title = titleEl ? titleEl.innerText : "Unknown Source";
                
                let contentText = "";
                
                const ul = item.querySelector('ul');
                if (ul) {
                    const lis = ul.querySelectorAll('li');
                    lis.forEach(li => {
                        contentText += `- ${li.innerText}\n`;
                    });
                } else {
                    const div = item.querySelector('div:last-child');
                    if(div) contentText = div.innerText;
                }

                clipboardText += `${title}:\n${contentText}\n\n`;
            });

            const ta = document.createElement('textarea');
            ta.value = clipboardText;
            document.body.appendChild(ta);
            ta.select();
            document.execCommand('copy');
            document.body.removeChild(ta);

            const btn = document.getElementById(`copy-btn-${nodeId}`);
            const originalHtml = btn.innerHTML;
            btn.innerHTML = `<span style="color:var(--success-color)">âœ“ Copied!</span>`;
            setTimeout(() => {
                btn.innerHTML = originalHtml;
            }, 1500);
        }

        function collectCompletedWork(nodeId) {
            const listContainer = document.getElementById(`list-${nodeId}`);
            if(!listContainer) return;
            
            listContainer.innerHTML = '';
            
            const nodes = document.querySelectorAll('.node-wrapper');
            let foundCount = 0;
            
            nodes.forEach(n => {
                if (n.id === nodeId) return; 

                let sourceTitle = n.dataset.type;
                if (n.dataset.type === 'complaint-board') {
                    const header = n.querySelector('.post-call-header span:first-child');
                    if (header) sourceTitle = header.innerText;
                } else if (['triangle','circle','rectangle','pill','pentagon','hexagon'].includes(n.dataset.type)) {
                    sourceTitle = n.dataset.type.charAt(0).toUpperCase() + n.dataset.type.slice(1);
                }

                if (n.classList.contains('completed')) {
                    const textEl = n.querySelector('.node-text');
                    if (textEl && textEl.innerText.trim().length > 0) {
                        foundCount++;
                        createPostCallItem(listContainer, sourceTitle, n.id, textEl.innerText, 'var(--success-color)');
                    }
                }

                if (n.dataset.type === 'complaint-board') {
                    const complaints = n.querySelectorAll('.post-call-item div:first-child');
                    
                    if(complaints.length > 0) {
                        foundCount++;
                        let htmlContent = '<ul style="margin:0; padding-left:20px;">';
                        complaints.forEach(c => {
                            htmlContent += `<li>${c.innerText}</li>`;
                        });
                        htmlContent += '</ul>';
                        
                        createPostCallItem(listContainer, sourceTitle, n.id, htmlContent, 'var(--danger-color)');
                    }
                }
            });
            
            if (foundCount === 0) {
                listContainer.innerHTML = '<div style="text-align:center; opacity:0.5; padding:20px;">No data found.<br><br>Mark shapes as Complete (âœ“) or add items to Complaint Boards.</div>';
            }
        }

        function createPostCallItem(container, title, id, content, color) {
            const item = document.createElement('div');
            item.className = 'post-call-item';
            item.style.borderLeftColor = color;
            
            item.innerHTML = `
                <small style="color:${color}; font-weight:bold;">${title} #${id.split('-')[1]}</small>
                <div>${content}</div>
            `;
            container.appendChild(item);
        }

        function enableTextEditing(nodeId) {
            const wrapper = document.getElementById(nodeId);
            const textEl = wrapper.querySelector('.node-text');
            wrapper.classList.add('editing');
            textEl.focus();
            activeTextNodeId = nodeId;
            updateTextMenuPos();
            textMenu.classList.add('visible');
            
            const range = document.createRange();
            const sel = window.getSelection();
            range.selectNodeContents(textEl);
            range.collapse(false);
            sel.removeAllRanges();
            sel.addRange(range);
        }

        function exitTextEditing() {
            if (!activeTextNodeId) return;
            const wrapper = document.getElementById(activeTextNodeId);
            if (wrapper) wrapper.classList.remove('editing');
            
            textMenu.classList.remove('visible');
            activeTextNodeId = null;
            
            saveState();
            triggerAutoUpdate();
        }

        function fitNodeToText(wrapper) {
            const textEl = wrapper.querySelector('.node-text');
            if (!textEl) return; 

            const type = wrapper.dataset.type;
            const minSize = 200;
            
            const contentWidth = textEl.scrollWidth;
            const contentHeight = textEl.scrollHeight;
            
            if (type === 'text' || type === 'post-call' || type === 'complaint-board' || type === 'alert-button') {
                return; 
            }
            
            const padding = 60; 
            
            let sizeMultiplier = 1.0;
            if (type === 'circle') sizeMultiplier = 1.5;
            else if (type === 'triangle') sizeMultiplier = 2.4; 
            else if (type === 'pentagon' || type === 'hexagon') sizeMultiplier = 1.6;
            
            let requiredWidth = contentWidth + padding;
            let requiredHeight = contentHeight + padding;

            if (['circle', 'triangle', 'pentagon', 'hexagon'].includes(type)) {
                const maxTextDim = Math.max(requiredWidth, requiredHeight);
                const requiredShapeSize = maxTextDim * sizeMultiplier;
                const finalSize = Math.max(minSize, requiredShapeSize);
                wrapper.style.width = `${finalSize}px`;
                wrapper.style.height = `${finalSize}px`;
            } else {
                const finalWidth = Math.max(minSize, requiredWidth);
                const finalHeight = Math.max(minSize, requiredHeight);
                wrapper.style.width = `${finalWidth}px`;
                wrapper.style.height = `${finalHeight}px`;
            }
        }

        function getDString(config) {
            let d = `M ${config.p[0].x} ${config.p[0].y} `;
            for(let i=1; i<6; i++) {
                d += `L ${config.p[i].x} ${config.p[i].y} `;
            }
            d += "Z";
            return d;
        }

        // --- Edge Logic ---

        function getEdgePathD(x1, y1, x2, y2, type) {
            if (type === 'straight') {
                return `M ${x1} ${y1} L ${x2} ${y2}`;
            } else if (type === 'curved') {
                const midX = (x1 + x2) / 2;
                return `M ${x1} ${y1} C ${midX} ${y1}, ${midX} ${y2}, ${x2} ${y2}`;
            } else if (type === 'metro') {
                const midX = (x1 + x2) / 2;
                return `M ${x1} ${y1} L ${midX} ${y1} L ${midX} ${y2} L ${x2} ${y2}`;
            } else if (type === 'manhattan') {
                const midY = (y1 + y2) / 2;
                return `M ${x1} ${y1} L ${x1} ${midY} L ${x2} ${midY} L ${x2} ${y2}`;
            } else if (type === 'metro-curved') {
                const midX = (x1 + x2) / 2;
                const r = Math.min(20, Math.abs(midX - x1), Math.abs(y2 - y1) / 2, Math.abs(x2 - midX));
                if (r < 2) return `M ${x1} ${y1} L ${midX} ${y1} L ${midX} ${y2} L ${x2} ${y2}`;
                const dx1 = (midX - x1) >= 0 ? 1 : -1;
                const dy = (y2 - y1) >= 0 ? 1 : -1;
                const dx2 = (x2 - midX) >= 0 ? 1 : -1;
                return `M ${x1} ${y1} L ${midX - r * dx1} ${y1} Q ${midX} ${y1} ${midX} ${y1 + r * dy} L ${midX} ${y2 - r * dy} Q ${midX} ${y2} ${midX + r * dx2} ${y2} L ${x2} ${y2}`;
            } else if (type === 'circuit') {
                const midX = (x1 + x2) / 2;
                const r = Math.min(20, Math.abs(midX - x1), Math.abs(y2 - y1) / 2, Math.abs(x2 - midX));
                if (r < 2) return `M ${x1} ${y1} L ${midX} ${y1} L ${midX} ${y2} L ${x2} ${y2}`;
                const dx1 = (midX - x1) >= 0 ? 1 : -1;
                const dy = (y2 - y1) >= 0 ? 1 : -1;
                const dx2 = (x2 - midX) >= 0 ? 1 : -1;
                return `M ${x1} ${y1} L ${midX - r * dx1} ${y1} L ${midX} ${y1 + r * dy} L ${midX} ${y2 - r * dy} L ${midX + r * dx2} ${y2} L ${x2} ${y2}`;
            } else if (type === 'subway') {
                const dx = x2 - x1;
                const dy = y2 - y1;
                const signDx = dx >= 0 ? 1 : -1;
                const signDy = dy >= 0 ? 1 : -1;
                if (Math.abs(dx) > Math.abs(dy)) {
                    const diagSpanX = Math.abs(dy);
                    const straightSpanX = Math.abs(dx) - diagSpanX;
                    const xTurn1 = x1 + (signDx * (straightSpanX / 2));
                    const xTurn2 = x2 - (signDx * (straightSpanX / 2));
                    return `M ${x1} ${y1} L ${xTurn1} ${y1} L ${xTurn2} ${y2} L ${x2} ${y2}`;
                } else {
                    const diagSpanY = Math.abs(dx);
                    const straightSpanY = Math.abs(dy) - diagSpanY;
                    const yTurn1 = y1 + (signDy * (straightSpanY / 2));
                    const yTurn2 = y2 - (signDy * (straightSpanY / 2));
                    return `M ${x1} ${y1} L ${x1} ${yTurn1} L ${x2} ${yTurn2} L ${x2} ${y2}`;
                }
            }
            return `M ${x1} ${y1} L ${x2} ${y2}`;
        }

        function updateEdgePositions(nodeId) {
            const connectedEdges = edges.filter(e => e.source === nodeId || e.target === nodeId);
            connectedEdges.forEach(edge => {
                const s = document.getElementById(edge.source);
                const t = document.getElementById(edge.target);
                // If node deleted, skip
                if(!s || !t) return;
                
                const x1 = parseFloat(s.style.left); const y1 = parseFloat(s.style.top);
                const x2 = parseFloat(t.style.left); const y2 = parseFloat(t.style.top);
                edge.element.setAttribute('d', getEdgePathD(x1, y1, x2, y2, edge.type));
            });
        }

        function updateEdgeAppearance(edge) {
            edge.element.setAttribute('stroke-width', edge.width);
            if (edge.color) edge.element.style.stroke = edge.color;
            else edge.element.style.stroke = '';

            if (edge.style === 'solid') {
                edge.element.removeAttribute('stroke-dasharray');
                edge.element.setAttribute('stroke-linecap', 'round');
            } else if (edge.style === 'dashed') {
                const dashLen = edge.width * edge.spacing;
                edge.element.setAttribute('stroke-dasharray', `${dashLen}, ${dashLen}`);
                edge.element.setAttribute('stroke-linecap', 'butt');
            } else if (edge.style === 'dotted') {
                const gapLen = edge.width * edge.spacing;
                edge.element.setAttribute('stroke-dasharray', `0, ${gapLen}`);
                edge.element.setAttribute('stroke-linecap', 'round');
            }
        }

        function createEdge(sourceId, targetId, type='straight') {
            const eid = `edge-${nextEdgeId++}`;
            const sourceNode = document.getElementById(sourceId);
            const targetNode = document.getElementById(targetId);
            const line = document.createElementNS("http://www.w3.org/2000/svg", "path");
            line.classList.add('connection-line');
            line.id = eid;
            
            const x1 = parseFloat(sourceNode.style.left); const y1 = parseFloat(sourceNode.style.top);
            const x2 = parseFloat(targetNode.style.left); const y2 = parseFloat(targetNode.style.top);
            
            const defaultWidth = 6;
            line.setAttribute('d', getEdgePathD(x1, y1, x2, y2, type));
            line.setAttribute('stroke-width', defaultWidth);
            line.addEventListener('contextmenu', (e) => showEdgeMenu(e, eid));
            line.addEventListener('mouseenter', () => hoverEdgeId = eid);
            line.addEventListener('mouseleave', () => hoverEdgeId = null);
            
            edgesLayer.insertBefore(line, edgesLayer.firstChild);
            
            const edgeData = { id: eid, source: sourceId, target: targetId, element: line, width: defaultWidth, spacing: 3, style: 'solid', type: type, color: null };
            edges.push(edgeData);
            updateEdgeAppearance(edgeData);
            saveState(); // Auto save
        }

        // --- Interaction Handlers ---

        viewport.addEventListener('mousedown', (e) => {
            if (connectionMode.active) { cancelConnection(); return; }
            if (e.target.closest('.node-wrapper')) return; 
            if (e.target.closest('.tool-btn')) return; // Don't drag on tool click
            if (e.target.closest('#text-menu')) return; 
            
            if (e.button !== 0) return; 
            isDraggingCanvas = true;
            lastMouse = { x: e.clientX, y: e.clientY };
            viewport.classList.add('panning');
            hideMenus();
        });

        viewport.addEventListener('dblclick', (e) => {
            if (activeTextNodeId) {
                if (!e.target.closest(`#${activeTextNodeId}`) && !e.target.closest('#text-menu')) {
                    exitTextEditing();
                    return; 
                }
            }

            if (e.target.closest('.node-wrapper') || e.target.closest('.tool-btn') || e.target.closest('.context-menu')) return;
            e.preventDefault();
            
            const wMx = (e.clientX - view.x) / view.zoom;
            const wMy = (e.clientY - view.y) / view.zoom;
            
            const wrapper = createNode(wMx, wMy, 'text');
            enableTextEditing(wrapper.id);
        });

        window.addEventListener('mousemove', (e) => {
            const dx = e.clientX - lastMouse.x;
            const dy = e.clientY - lastMouse.y;
            lastMouse = { x: e.clientX, y: e.clientY };

            if (isDraggingCanvas) {
                view.x += dx; view.y += dy;
                updateWorldTransform();
                if(activeTextNodeId) updateTextMenuPos();
            } else if (isDraggingNode && activeNodeId) {
                const node = document.getElementById(activeNodeId);
                const wDx = dx / view.zoom; const wDy = dy / view.zoom;
                node.style.left = `${parseFloat(node.style.left) + wDx}px`;
                node.style.top = `${parseFloat(node.style.top) + wDy}px`;
                updateEdgePositions(activeNodeId);
                node.dataset.hasDragged = "true";
                if(activeTextNodeId === activeNodeId) updateTextMenuPos();
            } else if (connectionMode.active && connectionMode.tempLine) {
                const wMx = (e.clientX - view.x) / view.zoom;
                const wMy = (e.clientY - view.y) / view.zoom;
                const x1 = parseFloat(connectionMode.tempLine.dataset.x1);
                const y1 = parseFloat(connectionMode.tempLine.dataset.y1);
                connectionMode.tempLine.setAttribute('d', `M ${x1} ${y1} L ${wMx} ${wMy}`);
            }
        });

        window.addEventListener('mouseup', () => {
            if(isDraggingNode) saveState(); 
            isDraggingCanvas = false; isDraggingNode = false; activeNodeId = null;
            viewport.classList.remove('panning');
        });

        window.addEventListener('keydown', (e) => {
            if (e.key === 'Delete' || e.key === 'Backspace') {
                if (activeTextNodeId) return; 
                
                if (hoverNodeId) {
                    deleteNode(hoverNodeId);
                } else if (hoverEdgeId) {
                    contextEdgeId = hoverEdgeId;
                    deleteEdge();
                }
            }
        });

        viewport.addEventListener('wheel', (e) => {
            e.preventDefault();
            const delta = -e.deltaY * 0.001;
            const newZoom = Math.min(Math.max(0.1, view.zoom + delta), 5);
            const mx = e.clientX - view.x;
            const my = e.clientY - view.y;
            const wMx = mx / view.zoom;
            const wMy = my / view.zoom;
            view.x -= wMx * (newZoom - view.zoom);
            view.y -= wMy * (newZoom - view.zoom);
            view.zoom = newZoom;
            updateWorldTransform();
            if(activeTextNodeId) updateTextMenuPos();
        }, { passive: false });

        viewport.addEventListener('contextmenu', (e) => {
            if (connectionMode.active) { e.preventDefault(); cancelConnection(); return; }
            if (e.target.closest('.node-wrapper') || e.target.classList.contains('connection-line')) return;
            e.preventDefault();
            contextMenuPos = { x: (e.clientX - view.x) / view.zoom, y: (e.clientY - view.y) / view.zoom };
            showMenu(canvasMenu, e.clientX, e.clientY);
        });

        function handleNodeMouseDown(e) {
            if (e.button !== 0) return;
            
            const node = e.currentTarget;
            const isTextNode = node.dataset.type === 'text';
            const isPostCallNode = node.dataset.type === 'post-call';
            const isComplaintNode = node.dataset.type === 'complaint-board';
            const isAlertNode = node.dataset.type === 'alert-button';
            const isEditing = node.classList.contains('editing');

            if (e.target.classList.contains('node-text')) {
                if (!isTextNode) return; 
                if (isTextNode && isEditing) return; 
            }
            
            if ((isPostCallNode || isComplaintNode || isAlertNode) && (e.target.tagName === 'BUTTON' || e.target.tagName === 'INPUT' || e.target.closest('.post-call-btn') || e.target.closest('.complaint-add-btn') || e.target.classList.contains('item-delete-btn') || e.target.closest('.neumorphic-toggle-btn'))) return;
            
            e.stopPropagation(); 
            if (connectionMode.active) return; 
            isDraggingNode = true; activeNodeId = node.id;
            lastMouse = { x: e.clientX, y: e.clientY };
            node.dataset.hasDragged = "false";
            hideMenus();
        }

        document.addEventListener('click', (e) => {
            const wrapper = e.target.closest('.node-wrapper');
            if (connectionMode.active) {
                if (wrapper && wrapper.id !== connectionMode.sourceId) finalizeConnection(wrapper.id);
                else cancelConnection();
                return;
            }
            if (!wrapper) { if (!e.target.closest('.context-menu')) hideMenus(); return; }
            if (wrapper.dataset.hasDragged === "true") return;
            if (e.target.classList.contains('node-text')) return;
            if (wrapper.dataset.type === 'post-call' || wrapper.dataset.type === 'complaint-board' || wrapper.dataset.type === 'alert-button') return; 

            const type = wrapper.dataset.type;
            
            if (type !== 'text') {
                const deg = (type==='rectangle'||type==='pill') ? 90 : 60;
                wrapper.dataset.rotation = parseFloat(wrapper.dataset.rotation) + deg;
                updateNodeTransform(wrapper);
                saveState(); 
            }
        }, true);

        function animateNodeHover(node, isHover) {
            if (connectionMode.active) return;
            node.dataset.scale = isHover ? 1.05 : 1;
            updateNodeTransform(node);
        }

        function updateNodeTransform(node) {
            const path = node.querySelector('path');
            const rot = node.dataset.rotation;
            const scale = node.dataset.scale;
            if (path) {
                path.style.transform = `rotate(${rot}deg) scale(${scale})`;
            } else if (node.dataset.type === 'text') {
                node.style.transform = `translate(-50%, -50%) scale(${scale})`;
            }
        }

        function updateWorldTransform() {
            world.style.transform = `translate(${view.x}px, ${view.y}px) scale(${view.zoom})`;
            document.querySelector('.grid-background').style.backgroundPosition = `${view.x}px ${view.y}px`;
            document.querySelector('.grid-background').style.backgroundSize = `${40 * view.zoom}px ${40 * view.zoom}px`;
        }

        // --- Menus ---

        let contextNodeId = null;
        let contextEdgeId = null;

        function showNodeMenu(e, nodeId) {
            e.preventDefault(); e.stopPropagation();
            if (connectionMode.active) { cancelConnection(); return; }
            contextNodeId = nodeId;
            
            const node = document.getElementById(nodeId);
            if (!node) return; 

            const isTextNode = node.dataset.type === 'text';
            const isPostCall = node.dataset.type === 'post-call';
            const isComplaint = node.dataset.type === 'complaint-board';
            const isAlertNode = node.dataset.type === 'alert-button';
            
            const shapeItem = document.querySelector('#node-menu .has-submenu');
            const labelItem = document.getElementById('text-toggle-item');
            const completeItem = document.getElementById('complete-toggle-item');
            
            if(shapeItem) shapeItem.style.display = 'flex';
            if(labelItem) labelItem.style.display = 'flex';
            if(completeItem) completeItem.style.display = 'flex';

            if (isTextNode || isPostCall || isComplaint || isAlertNode) {
                if(shapeItem) shapeItem.style.display = 'none';
                if(labelItem) labelItem.style.display = 'none';
                if(completeItem) completeItem.style.display = 'none';
            } else {
                const textEl = node.querySelector('.node-text');
                const labelSpan = document.getElementById('text-toggle-label');
                if (labelSpan && textEl) {
                    labelSpan.innerText = textEl.classList.contains('visible') ? "Remove Label" : "Add Label";
                }
                
                const completeSpan = document.getElementById('complete-toggle-label');
                if (completeSpan) {
                    completeSpan.innerText = node.classList.contains('completed') ? "Mark Incomplete" : "Mark Complete";
                }
            }

            showMenu(nodeMenu, e.clientX, e.clientY);
        }

        function showEdgeMenu(e, edgeId) {
            e.preventDefault(); e.stopPropagation();
            contextEdgeId = edgeId;
            const edge = edges.find(e => e.id === edgeId);
            if (edge) {
                widthInput.value = edge.width; widthSlider.value = edge.width;
                spacingInput.value = edge.spacing; spacingSlider.value = edge.spacing;
            }
            showMenu(edgeMenu, e.clientX, e.clientY);
        }

        function showMenu(menu, x, y) {
            hideMenus();
            let mx = x, my = y;
            const mw = menu.offsetWidth || 200; 
            const mh = menu.offsetHeight || 300; 
            if (mx + mw > window.innerWidth) mx -= mw;
            if (my + mh > window.innerHeight) my -= mh;
            menu.style.left = `${mx}px`;
            menu.style.top = `${my}px`;
            menu.classList.add('visible');
        }

        function hideMenus() {
            nodeMenu.classList.remove('visible');
            canvasMenu.classList.remove('visible');
            edgeMenu.classList.remove('visible');
            textMenu.classList.remove('visible');
        }

        // --- Rename Logic ---
        
        window.renameNode = function() {
            if (!contextNodeId) return;
            const node = document.getElementById(contextNodeId);
            const type = node.dataset.type;

            let currentName = "";
            let titleEl = null;

            if (type === 'post-call' || type === 'complaint-board') {
                titleEl = node.querySelector('.post-call-header span:first-child');
                currentName = titleEl.innerText;
            } else if (type === 'text') {
                enableTextEditing(contextNodeId);
                hideMenus();
                return;
            } else {
                toggleNodeText();
                hideMenus();
                return;
            }

            const newName = prompt("Rename Node:", currentName);
            if (newName && newName.trim() !== "") {
                titleEl.innerText = newName;
                saveState();
                triggerAutoUpdate(); 
            }
            hideMenus();
        }

        // --- Text Menu Logic ---
        
        window.formatText = function(cmd, value=null) {
            document.execCommand(cmd, false, value);
            if(activeTextNodeId) {
                const wrapper = document.getElementById(activeTextNodeId);
                fitNodeToText(wrapper);
                if (cmd === 'foreColor') {
                    const textEl = wrapper.querySelector('.node-text');
                    textEl.focus();
                }
            }
        };

        function updateTextMenuPos() {
            // No positioning logic needed anymore.
            // The menu is fixed to the top of the screen via CSS.
        }

        // --- Connection & Fork Logic ---

        window.startConnection = function() {
            if (!contextNodeId) return;
            hideMenus();
            const s = document.getElementById(contextNodeId);
            s.classList.add('connecting-source');
            connectionMode = { active: true, sourceId: contextNodeId, tempLine: null };
            
            const tempLine = document.createElementNS("http://www.w3.org/2000/svg", "path");
            tempLine.classList.add('temp-line');
            const x = parseFloat(s.style.left); const y = parseFloat(s.style.top);
            tempLine.dataset.x1 = x; tempLine.dataset.y1 = y;
            tempLine.setAttribute('d', `M ${x} ${y} L ${x} ${y}`);
            edgesLayer.appendChild(tempLine);
            connectionMode.tempLine = tempLine;
        };

        function finalizeConnection(targetId) {
            const sid = connectionMode.sourceId;
            if (!edges.some(e => (e.source===sid && e.target===targetId) || (e.source===targetId && e.target===sid))) {
                createEdge(sid, targetId);
            }
            cancelConnection();
        }

        function cancelConnection() {
            if (connectionMode.sourceId) document.getElementById(connectionMode.sourceId)?.classList.remove('connecting-source');
            connectionMode.tempLine?.remove();
            connectionMode = { active: false, sourceId: null, tempLine: null };
        }

        // --- Fork Logic ---
        
        window.adjustForkCount = function(delta) {
            forkCount += delta;
            if (forkCount < 2) forkCount = 2;
            if (forkCount > 10) forkCount = 10;
            document.getElementById('fork-count-display').innerText = forkCount;
        }

        window.forkNode = function() {
            if (!contextNodeId) return;
            const source = document.getElementById(contextNodeId);
            const x = parseFloat(source.style.left);
            const y = parseFloat(source.style.top);
            const type = source.dataset.type;
            
            const xOffset = 350;
            const spacingY = 220;
            const totalHeight = (forkCount - 1) * spacingY;
            const startY = y - (totalHeight / 2);

            for (let i = 0; i < forkCount; i++) {
                const newY = startY + (i * spacingY);
                const newNode = createNode(x + xOffset, newY, type);
                createEdge(contextNodeId, newNode.id, 'metro-curved');
            }
            
            hideMenus();
        }

        // --- Toggle Node Text ---
        window.toggleNodeText = function() {
            if(!contextNodeId) return;
            const node = document.getElementById(contextNodeId);
            const textEl = node.querySelector('.node-text');
            if (textEl.classList.contains('visible')) {
                textEl.classList.remove('visible');
                textEl.innerText = "";
                fitNodeToText(node); // Reset size
            } else {
                textEl.classList.add('visible');
                setTimeout(() => textEl.focus(), 50);
            }
            hideMenus();
            saveState();
            triggerAutoUpdate();
        }

        // --- Toggle Complete ---
        window.toggleNodeComplete = function() {
            if(!contextNodeId) return;
            const node = document.getElementById(contextNodeId);
            if (node.classList.contains('completed')) {
                node.classList.remove('completed');
            } else {
                node.classList.add('completed');
            }
            hideMenus();
            saveState();
            triggerAutoUpdate();
        }

        // --- Edge & Node Actions ---

        window.deleteNode = (targetId = null) => {
            const idToDelete = targetId || contextNodeId;
            if (!idToDelete) return;

            // Remove Node DOM
            const node = document.getElementById(idToDelete);
            if(node) node.remove();

            // Find connected edges
            const connectedEdges = edges.filter(e => e.source === idToDelete || e.target === idToDelete);
            connectedEdges.forEach(e => e.element.remove());

            // Remove from data array
            edges = edges.filter(e => e.source !== idToDelete && e.target !== idToDelete);

            // Clean up alert interval if it was an alert node
            if (alertIntervals[idToDelete]) {
                clearInterval(alertIntervals[idToDelete]);
                delete alertIntervals[idToDelete];
            }

            hideMenus();
            saveState();
            triggerAutoUpdate();
        }

        window.changeEdgeType = (type) => { if(contextEdgeId) { const e=edges.find(ed=>ed.id===contextEdgeId); e.type=type; updateEdgePositions(e.source); } hideMenus(); saveState(); };
        window.changeEdgeStyle = (style) => { if(contextEdgeId) { const e=edges.find(ed=>ed.id===contextEdgeId); e.style=style; updateEdgeAppearance(e); } hideMenus(); saveState(); };
        window.deleteEdge = () => { if(contextEdgeId) { const i=edges.findIndex(e=>e.id===contextEdgeId); if(i>-1){ edges[i].element.remove(); edges.splice(i,1); } } hideMenus(); saveState(); };
        
        window.updateWidthFromInput = (v) => { widthSlider.value=v; applyEdgeParam('width', v); };
        window.updateWidthFromSlider = (v) => { widthInput.value=v; applyEdgeParam('width', v); };
        window.updateSpacingFromInput = (v) => { spacingSlider.value=v; applyEdgeParam('spacing', v); };
        window.updateSpacingFromSlider = (v) => { spacingInput.value=v; applyEdgeParam('spacing', v); };
        function applyEdgeParam(p, v) { if(contextEdgeId) { const e=edges.find(ed=>ed.id===contextEdgeId); e[p]=parseInt(v); updateEdgeAppearance(e); } saveState(); }

        window.changeNodeColor = (c) => { 
            if(contextNodeId) { 
                const n=document.getElementById(contextNodeId).querySelector('path'); 
                if(n) { n.style.fill=c; n.style.stroke=c; }
            } 
            hideMenus(); 
            saveState(); 
        };
        window.changeEdgeColor = (c) => { 
            if(contextEdgeId) { 
                const e=edges.find(ed=>ed.id===contextEdgeId); 
                e.color=c; updateEdgeAppearance(e); 
            } 
            hideMenus(); 
            saveState(); 
        };

        window.addNodeAtCursor = () => { createNode(contextMenuPos.x, contextMenuPos.y, 'triangle'); hideMenus(); };
        
        window.changeNodeShape = (type) => { 
            if(contextNodeId) {
                const w = document.getElementById(contextNodeId);
                // Can't change shape of text node to geometry or vice versa easily without complex logic, so restrictive
                if(w.dataset.type === 'text') return;

                const currentType = w.dataset.type; 
                
                if (currentType !== type) {
                    w.dataset.rotation = 0; 
                    w.dataset.type = type; 
                    updateNodeTransform(w);
                    animatePathMorph(w.querySelector('path'), CONFIG[currentType], CONFIG[type]); 
                    fitNodeToText(w); 
                }
            } 
            hideMenus(); 
            saveState();
        };

        const easeInOutCubic = t => t < 0.5 ? 4 * t * t * t : 1 - Math.pow(-2 * t + 2, 3) / 2;
        const lerp = (a, b, t) => a * (1 - t) + b * t;
        function animatePathMorph(el, start, end) {
            let st = null; const d = 600;
            function step(t) {
                if (!st) st = t;
                const p = Math.min((t - st) / d, 1);
                const e = easeInOutCubic(p);
                let newD = "M ";
                for(let i=0; i<6; i++) {
                    const x = lerp(start.p[i].x, end.p[i].x, e);
                    const y = lerp(start.p[i].y, end.p[i].y, e);
                    newD += `${x} ${y} `; if(i<5) newD += "L ";
                }
                newD += "Z";
                el.setAttribute('d', newD);
                el.setAttribute('stroke-width', lerp(start.stroke, end.stroke, e));
                if (p < 1) requestAnimationFrame(step);
            }
            requestAnimationFrame(step);
        }

        init();
    </script>
</body>
</html>
