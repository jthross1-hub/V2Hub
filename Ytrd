            transform: translateX(-50%) translateY(-200%); /* Start hidden above screen */
            flex-direction: row;
            flex-wrap: nowrap;
            gap: 10px;
            padding: 10px 20px;
            width: auto;
            justify-content: center;
            z-index: 2500;
            background: var(--bg-color);
            border-radius: 50px; /* Pill shape for top bar */
            box-shadow: 
                5px 5px 10px var(--shadow-dark), 
                -5px -5px 10px var(--shadow-light);
            display: flex;
            visibility: hidden;
            transition: transform 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275), visibility 0.3s;
        }
        
        .text-menu.visible {
            transform: translateX(-50%) translateY(0); /* Slide down */
            visibility: visible;
            animation: none; /* Disable context menu bounce */
        }
        
